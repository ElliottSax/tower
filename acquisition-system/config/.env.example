# =============================================================================
# BUSINESS ACQUISITION SYSTEM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this to .env and fill in your actual credentials
# Never commit .env to git!

# =============================================================================
# DATABASE
# =============================================================================
# Supabase or PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/acquisition_system
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# =============================================================================
# AI & PERSONALIZATION
# =============================================================================
# Claude API (Anthropic)
ANTHROPIC_API_KEY=sk-ant-api03-...
CLAUDE_MODEL=claude-sonnet-4-5-20250929
# Enable batch API for 50% cost savings on non-urgent requests
CLAUDE_USE_BATCH=true

# OpenAI (optional, for embeddings/fallback)
# OPENAI_API_KEY=sk-...

# =============================================================================
# DATA SOURCES
# =============================================================================
# Secretary of State APIs
# California
CA_SOS_API_KEY=your-ca-sos-key

# Iowa (if using)
IA_SOS_API_KEY=your-iowa-key
IA_SOS_API_URL=https://api.iowa.gov/sos/

# Aggregators (recommended for all 50 states)
# Cobalt Intelligence
COBALT_API_KEY=your-cobalt-key
# Middesk
MIDDESK_API_KEY=your-middesk-key

# LinkedIn Data
PROXYCURL_API_KEY=your-proxycurl-key  # $0.01/profile

# BizBuySell monitoring (web scraping)
BIZBUYSELL_SCRAPER_ENABLED=true

# Deal databases (for training data)
# DEALSTATS_API_KEY=your-dealstats-key
# BIZCOMPS_API_KEY=your-bizcomps-key

# =============================================================================
# DATA ENRICHMENT
# =============================================================================
# Email enrichment waterfall (queried in order until found)
PROSPEO_API_KEY=your-prospeo-key
DROPCONTACT_API_KEY=your-dropcontact-key
DATAGMA_API_KEY=your-datagma-key
HUNTER_API_KEY=your-hunter-key
APOLLO_API_KEY=your-apollo-key

# Phone number lookup
# NUMVERIFY_API_KEY=your-numverify-key
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token

# Company enrichment
CLEARBIT_API_KEY=your-clearbit-key
# BUILTWITH_API_KEY=your-builtwith-key  # Technology stack detection

# =============================================================================
# EMAIL AUTOMATION
# =============================================================================
# Choose one: Instantly.ai or Smartlead.ai

# Instantly.ai ($37-$97/month, unlimited mailboxes)
INSTANTLY_API_KEY=your-instantly-key
INSTANTLY_CAMPAIGN_ID=your-campaign-id

# Smartlead.ai ($39-$94/month, SmartDelivery)
# SMARTLEAD_API_KEY=your-smartlead-key

# Email verification (to keep bounce rate < 2%)
ZEROBOUNCE_API_KEY=your-zerobounce-key
# NEVERBOUNCE_API_KEY=your-neverbounce-key

# Secondary domain for cold outreach (protect main domain)
OUTREACH_DOMAIN=acquisitions-example.com
OUTREACH_FROM_NAME=John Smith
OUTREACH_FROM_EMAIL=john@acquisitions-example.com

# Email warmup settings
WARMUP_DAILY_LIMIT_START=10  # Start with 10/day
WARMUP_DAILY_LIMIT_MAX=50    # Ramp to 50/day over 2-4 weeks
WARMUP_INCREMENT_DAYS=3       # Increase every 3 days

# =============================================================================
# WEB SCRAPING
# =============================================================================
# Proxies (optional but recommended for large-scale scraping)
# PROXY_URL=http://your-proxy-provider.com
# PROXY_USERNAME=your-username
# PROXY_PASSWORD=your-password

# Scraping rate limits (requests per second)
SCRAPER_RATE_LIMIT=0.5  # 0.5 = 2 seconds between requests

# User agent rotation
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# MACHINE LEARNING
# =============================================================================
# Model training data sources
TRAINING_DATA_PATH=./data/training/
MODEL_OUTPUT_PATH=./data/models/

# Feature weights (can override defaults)
SCORE_WEIGHT_MARKETPLACE_LISTING=0.30
SCORE_WEIGHT_OWNER_AGE_65_PLUS=0.20
SCORE_WEIGHT_BUSINESS_TENURE_20_PLUS=0.15
SCORE_WEIGHT_PE_HOLD_PERIOD=0.12
SCORE_WEIGHT_DIGITAL_DECAY=0.10
SCORE_WEIGHT_HEADCOUNT_DECLINE=0.08
SCORE_WEIGHT_NO_SUCCESSION_PLAN=0.05

# Scoring thresholds
SCORE_THRESHOLD_HOT=0.70   # Direct outreach
SCORE_THRESHOLD_WARM=0.45  # Nurture campaign
# Below 0.45 = Cold (monitoring only)

# =============================================================================
# WEBHOOKS & NOTIFICATIONS
# =============================================================================
# Discord webhook for notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Slack webhook (alternative)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Notify on events
NOTIFY_NEW_HOT_LEADS=true
NOTIFY_RESPONSES=true
NOTIFY_ERRORS=true

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ENVIRONMENT=development  # or 'production'
SENTRY_TRACES_SAMPLE_RATE=0.1   # 10% of transactions

# =============================================================================
# ORCHESTRATION
# =============================================================================
# Airflow (if using)
# AIRFLOW_HOME=~/airflow
# AIRFLOW__CORE__DAGS_FOLDER=./backend/orchestration/dags
# AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Cron schedule (if not using Airflow)
CRON_SOS_SYNC=0 2 * * *          # Daily at 2 AM: Sync SoS data
CRON_ENRICHMENT=0 3 * * *         # Daily at 3 AM: Enrich new leads
CRON_SCORING=0 4 * * *            # Daily at 4 AM: Recalculate scores
CRON_EMAIL_VERIFICATION=0 5 * * 0 # Weekly Sunday 5 AM: Verify emails
CRON_OUTREACH=0 9 * * 1-5        # Weekdays at 9 AM: Send outreach emails

# Data decay: business data decays ~22% annually, re-verify quarterly
CRON_REVERIFY=0 6 1 */3 *        # 1st of every 3 months at 6 AM

# =============================================================================
# DASHBOARD
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3000

# Authentication (use same as products/ setup)
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1
DO_NOT_TRACK=1
