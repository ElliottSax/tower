# Discovery Service Configuration
# Copy this file to .env and fill in your actual values

# Service Info
SERVICE_NAME=quant-discovery
VERSION=1.0.0
ENVIRONMENT=production

# Database (SHARED with main app - use same credentials!)
DATABASE_URL=postgresql+asyncpg://user:password@db-host:5432/quant

# Redis (can be shared or separate)
REDIS_URL=redis://redis:6379/0

# LLM APIs
# Get DeepSeek key: https://platform.deepseek.com ($5 free credits)
DEEPSEEK_API_KEY=sk-your-deepseek-key-here

# Get HuggingFace key: https://huggingface.co (30K free requests/month)
HF_API_KEY=hf_your-huggingface-key-here

# MLFlow
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=quant-discovery

# Discovery Settings
DISCOVERY_MODE=production
ENABLE_ALERTS=true
ALERT_EMAIL=admin@example.com
ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Resource Limits
MAX_WORKERS=5
WORKER_MEMORY_LIMIT=8GB
ENABLE_GPU=false

# Analysis Parameters
MIN_TRADES_FOR_ANALYSIS=100
PATTERN_CONFIDENCE_THRESHOLD=0.7
ANOMALY_SEVERITY_THRESHOLD=0.8
NETWORK_CORRELATION_THRESHOLD=0.5

# Scheduling (hours)
SCAN_ALL_POLITICIANS_HOUR=2
NETWORK_ANALYSIS_INTERVAL_HOURS=6
ANOMALY_HUNTING_INTERVAL_HOURS=4

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
